<Window x:Class="gameCenter.Projects.CarGame.CarGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gameCenter.Projects.CarGame"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="CarGame" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="BackgroudVideo" LoadedBehavior="Manual" UnloadedBehavior="Stop" IsMuted="True" Stretch="UniformToFill" MediaEnded="MediaElement_MediaEnded" />


        <Canvas x:Name="gameCanvas">
            <TextBox Name="consoleTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Text="" Background="Black" Foreground="WhiteSmoke" BorderThickness="0"/>
            <Image x:Name="playerCarImage" Source="images/carImage.png" Stretch="Fill" Height="100" Width="114"/>
        </Canvas>
    </Grid>
</Window>
